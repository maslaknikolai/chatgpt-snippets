{
    "name": "ChatGPT Snippets",
    "version": "1.0.0",
    "description": "Simple snippet buttons above the main chat field",
    "author": "Nikolai Maslak",
    "manifest_version": 3,
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_title": "pageatitle",
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://chat.openai.com/*"],
        "js": ["chatgpt-snippets.user.js"]
      }
    ]
}